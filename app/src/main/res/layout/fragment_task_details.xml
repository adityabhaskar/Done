<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/single_margin"
    android:paddingLeft="@dimen/single_margin"
    android:paddingRight="@dimen/single_margin"
    android:paddingTop="@dimen/single_margin"
    tools:context="net.c306.done.TaskDetailsFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical">

        <TextView
            android:id="@+id/task_owner"
            style="@style/touchable_items"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:background="@drawable/touchable_item_background"
            android:drawablePadding="@dimen/half_margin"
            android:gravity="center_vertical"
            android:singleLine="true"
            android:text="adityabhaskar"/>

        <TextView
            android:id="@+id/task_done_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:paddingLeft="@dimen/single_margin"
            android:text="01 Jan 2016"/>

    </LinearLayout>

    <View style="@style/divider"/>

    <TextView
        android:id="@+id/task_text"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="@dimen/half_margin"
        android:layout_weight="1"
        android:lineSpacingMultiplier="1.4"
        android:text="@string/hello_blank_fragment"
        android:textColor="@color/primary_text"
        android:textSize="18sp"/>

    <View style="@style/divider"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/task_team"
            style="@style/touchable_items"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:drawablePadding="@dimen/half_margin"
            android:gravity="center_vertical"
            android:paddingEnd="@dimen/single_margin"
            android:singleLine="true"
            android:text="Dev Log"/>

        <TextView
            android:id="@+id/task_likes"
            style="@style/touchable_items"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawablePadding="@dimen/half_margin"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/single_margin"
            android:paddingRight="@dimen/half_margin"
            android:singleLine="true"
            android:text="@string/digit_zero"/>

        <TextView
            android:id="@+id/task_comments"
            style="@style/touchable_items"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawablePadding="@dimen/half_margin"
            android:gravity="center_vertical"
            android:paddingRight="@dimen/single_margin"
            android:singleLine="true"
            android:text="@string/digit_zero"/>

    </LinearLayout>

</LinearLayout>
